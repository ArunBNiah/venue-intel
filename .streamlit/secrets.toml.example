# Streamlit Secrets Configuration
# ================================
# Copy this content to Streamlit Cloud:
#   1. Go to your app on share.streamlit.io
#   2. Click "Settings" (gear icon) â†’ "Secrets"
#   3. Paste this content and update with real values
#
# For local development, copy this file to secrets.toml

# Cookie settings for session management
[cookie]
name = "venue_intel_auth"
key = "REPLACE_WITH_A_RANDOM_32_CHARACTER_SECRET_KEY"
expiry_days = 30

# User credentials
# Generate password hashes with:
#   python -c "import bcrypt; print(bcrypt.hashpw('yourpassword'.encode(), bcrypt.gensalt()).decode())"

[credentials.usernames.demo]
name = "Demo User"
email = "demo@niahdata.co.uk"
password = "$2b$12$REPLACE_WITH_HASHED_PASSWORD"
role = "viewer"

[credentials.usernames.client]
name = "Client User"
email = "client@example.com"
password = "$2b$12$REPLACE_WITH_HASHED_PASSWORD"
role = "client"

[credentials.usernames.admin]
name = "Admin User"
email = "admin@niahdata.co.uk"
password = "$2b$12$REPLACE_WITH_HASHED_PASSWORD"
role = "admin"

# Pre-authorized emails (optional)
[preauthorized]
emails = ["admin@niahdata.co.uk"]
