# Authentication Configuration
# Copy this to auth.yaml and update with real credentials
# Generate password hashes with: python -c "import bcrypt; print(bcrypt.hashpw('yourpassword'.encode(), bcrypt.gensalt()).decode())"

credentials:
  usernames:
    demo:
      name: Demo User
      email: demo@example.com
      password: $2b$12$REPLACE_WITH_HASHED_PASSWORD
      role: viewer
    client:
      name: Client User
      email: client@example.com
      password: $2b$12$REPLACE_WITH_HASHED_PASSWORD
      role: client
    admin:
      name: Admin User
      email: admin@example.com
      password: $2b$12$REPLACE_WITH_HASHED_PASSWORD
      role: admin

cookie:
  name: venue_intel_auth
  key: REPLACE_WITH_RANDOM_SECRET_KEY
  expiry_days: 30

preauthorized:
  emails:
    - admin@example.com
